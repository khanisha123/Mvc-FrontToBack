@using FrontToBack.ViewModels
@model ForgetPassword
@{
    Layout = null;
}

<div class="container">
    <div class="row">
        <form method="post">
            <input hidden asp-for="User.Email" />
            <input hidden asp-for="Token" />
            <input asp-for="Password" placeholder="enter password" />
            <input asp-for="ConfirmPassword" placeholder="confirm password" />
            <button type="submit" class="btn btn-primary">Reset Password</button>
        </form>
    </div>
</div>
